<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city_average_temp_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            tools:text="Средняя температура по городу [Город]"/>

        <!-- Список погодных карточек -->
        <include
            android:id="@+id/weatherDay1"
            layout="@layout/item_weather_day" />

        <include
            android:id="@+id/weatherDay2"
            layout="@layout/item_weather_day" />

        <include
            android:id="@+id/weatherDay3"
            layout="@layout/item_weather_day" />

        <include
            android:id="@+id/weatherDay4"
            layout="@layout/item_weather_day" />

        <include
            android:id="@+id/weatherDay5"
            layout="@layout/item_weather_day" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>